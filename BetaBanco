#banco pobrank

class Bancaria:
    def __init__ (self,numero,saldo,nome,tipoconta,contastatus=True):
         self.numero = numero
         self.saldo = saldo
         self.tipoconta = tipoconta
         self.nome = nome

    def verifnumero(self):
        if self.contastatus == True:
            print(f"O número da sua conta é {self.numero}")
        else:
            print("Ops sua conta encontra-se desativada, se possivel, retorne ao setor financeiro para reativar sua conta")
    def verifsaldo(self):
        if self.contastatus == True:
            if self.saldo > "0" and self.saldo > 1:
                print(f"Seu saldo é {self.saldo} R$")
            else:
                print(f"Seu saldo encontra-se zerado.")
        else:
            print("Conta encerrada, não é possível verificar o saldo.")
    def veriftipoconta(self):
        if self.contastatus==True:
            print(f"Sua conta é do tipo {self.tipoconta}")
        else:
            print("Conta desativada, por favor contate o suporte para reativar a mesma!")

